{
  "manifest_version": 3,
  "name": "Real-time Phishing Detector",
  "version": "1.1",
  "description": "Detect phishing emails in Gmail/Outlook using DistilBERT backend",
  "permissions": ["storage", "scripting", "activeTab", "tabs"],
  "host_permissions": [
    "http://127.0.0.1:5000/*",
    "http://localhost:5000/*",
    "https://mail.google.com/*",
    "https://outlook.live.com/*",
    "https://outlook.office.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Phishing Detector"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content_script.js"],
      "run_at": "document_end",
      "all_frames": true
    },
    {
      "matches": ["https://outlook.live.com/*", "https://outlook.office.com/*"],
      "js": ["content_script.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content_script.js"],
      "matches": ["https://mail.google.com/*", "https://outlook.live.com/*", "https://outlook.office.com/*"]
    }
  ]
}
